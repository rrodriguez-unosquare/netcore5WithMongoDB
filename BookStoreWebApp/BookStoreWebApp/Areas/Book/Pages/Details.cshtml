@page
@model BookStoreApi.Areas.Book.Pages.DetailsModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2>Book Details</h2>


<form>
    <div class="form-group row">
        <label for="BookName" class="col-sm-2 col-form-label">Book Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" id="BookName" value="@Model.Book.BookName">
        </div>
    </div>

    <div class="form-group row">
        <label for="Author" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" id="Author" value="@Model.Book.Author">
        </div>
    </div>

    <div class="form-group row">
        <label for="Category" class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" id="Category" value="@Model.Book.Category">
        </div>
    </div>

    <div class="form-group row">
        <label for="Price" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" id="Price" value="@Model.Book.Price">
        </div>
    </div>

    <div class="form-group row">
        <label for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea readonly class="form-control" id="Description" rows="3">@Model.Book.Description</textarea>
        </div>
    </div>

</form>
