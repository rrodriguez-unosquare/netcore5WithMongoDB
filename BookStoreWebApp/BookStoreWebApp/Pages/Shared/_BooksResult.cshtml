
@using BookStoreWebApp.Models
@model BooksResultModel
@{
}


@foreach (var book in Model.Books)
{
    <div class="col-3">
        <div class="card " style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@book.BookName</h5>
                <h6 class="card-subtitle mb-2 text-muted">@book.Category</h6>
                <p class="card-text">@book.Author</p>
                <a asp-area="Book" asp-page="/Details" asp-route-id="@book.Id" class="card-link">See Details</a>

                <a asp-area="Book" asp-page="/Edit" asp-route-id="@book.Id" class="card-link">Edit</a>

                <a asp-area="Book" asp-page="/DeleteConfirmation" asp-route-id="@book.Id" class="card-link">Delete</a>
            </div>
        </div>
    </div>


}